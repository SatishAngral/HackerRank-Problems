#include <stdio.h>
#include <string.h>
#include <math.h>
#include <stdlib.h>

int main() {

    int U;
    float TotalBill = 0, surCharge;
    scanf("%d",&U);
    
    if (U <= 50){
        TotalBill = U * 0.50;
    } 
    else if (U <= 150) {
        TotalBill = 50 * 0.50 + (U - 50) * 0.75;
    } 
    else if (U <= 250) {
        TotalBill = 50 * 0.50 + 100 * 0.75 + (U - 150) * 1.20;
    } 
    else {
        TotalBill = 50 * 0.50 + 100 * 0.75 + 100 * 1.20 + (U - 250) * 1.50;
    }
    
    surCharge = TotalBill * 0.20;
    TotalBill += surCharge;
    
    printf("%.2f",TotalBill);
    
    return 0;
}
